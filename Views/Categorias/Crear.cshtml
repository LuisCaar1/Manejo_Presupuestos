@model Categoria

@{
    ViewData["Title"] = "Crear categoria";
}

<h1>Crear categoría</h1>

<h5>La categoría nos permite indicar en qué gastamos nuestro dinero,
    también, de dónde provienen nuestros ingresos.
</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacionId>()"></select>
    </div>
    
</form>
